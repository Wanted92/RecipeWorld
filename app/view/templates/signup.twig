{% extends 'base.twig'%}

{% block subtitle %}- Sign Up{% endblock %}

{% block content %}

<form action="{{ app.urlFor("SignupAddPost") }}" method="post" >

	<label for="name"> Name: </label>
	<input type="text" name="name" id="name" size="20" maxlength="20" onkeyup = "validate(this.id)" />
	<span id="feed_name"></span></br></br>
	
	<label for="surname"> Surname: </label>
	<input type="text" name="surname" id="surname" size="20" maxlength="20" onkeyup = "validate(this.id)"/>
	<span id="feed_surname"></span></br></br>
	
	<label for="username"> Username: </label>
	<input type="text" name="username" id="username" size="20" maxlength="20" onkeyup = "validate(this.id)"/>
	<span id="feed_username"></span></br></br>
	
	<label for="email"> Email: </label>
	<input type="email" name="email" id="email" onkeyup = "validate(this.id)"/>
	<span id="feed_email"></span></br></br>
	
	<label for="password"> Password: </label>
	<input type="password" name="password" id="password" size="20" maxlength="20" onkeyup = "validate(this.id)"/>
	<span id="feed_password"></span></br></br>
	
	<!--  <label for="password_check"> Password: </label>
	<input type="password" name="password_check" id="password_check" size="20" maxlength="20" onkeyup = "validate(this.id)"/>
	<span id="feed_password_check"></span></br></br> -->
	
	<label for="bornDate"> Born date: </label>
	<input type="text" name="date" id="born_date" onkeyup = "validate(this.id)"/>
	<span id="feed_born_date"></span></br></br>
	
	<label for="country"> Country: </label>
	<input type="text" name="country" id="country" maxlength="20" onkeyup = "validate(this.id)"/>
	<span id="feed_country"></span></br></br>
	
	<input type="submit" id = "signup" value="Sign up">
	
</form>
{% endblock %}